{
  "manifest_version": 2,
  "name": "Lhamacorp Proxy Client",
  "version": "1.0.0",
  "description": "Automatic JWT authentication for Lhamacorp SOCKS5 proxy server",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "proxy",
    "privacy",
    "storage",
    "activeTab",
    "contextMenus",
    "notifications",
    "http://localhost/*",
    "https://localhost/*",
    "https://auth.lhamacorp.com/*",
    "http://httpbin.org/*",
    "<all_urls>"
  ],

  "incognito": "spanning",

  "background": {
    "scripts": [
      "src/utils/auth.js",
      "src/background/proxy-auth.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Lhamacorp Proxy Client",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    "src/utils/*"
  ]
}